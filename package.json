{
	"name": "qrcode",
	"version": "1.0.0",
	"description": "",
	"main": "",
	"scripts": {
		"rm": "node -e 'fs.unlinkSync(process.argv[2])'",
		"lint:script": "eslint ./src/**.ts",
		"build:script:rollup:1-config": "./bin/transpiler ./src/bin/rollup.config.ts rollup.config.mjs",
		"build:script:rollup:2-run": "rollup -c",
		"build:script:rollup:3-cleanup": "rm rollup.config.mjs",
		"build:script": "run-s build:script:rollup:*",
		"build:style": "./bin/sass src/index.sass dist/index.css",
		"build:html:1-script": "./bin/transpiler ./src/bin/html.ts ./bin/html",
		"build:html:2-template": "./bin/html dist/index.css dist/index.js src/index.html > dist/index.html",
		"build:html": "run-s build:html:*",
		"build:assets": "run-p lint:script build:script build:style",
		"build": "run-s build:assets build:html"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/xnuk/qrcode"
	},
	"author": "Xnuk Shuman",
	"license": "BSD-3-Clause",
	"devDependencies": {
		"@rollup/plugin-typescript": "^4.0.0",
		"@types/node": "^13.11.0",
		"@typescript-eslint/eslint-plugin": "^2.27.0",
		"@typescript-eslint/parser": "^2.27.0",
		"eslint": "^6.8.0",
		"eslint-config-standard": "^14.1.1",
		"eslint-plugin-import": "^2.20.2",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^3.1.2",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-standard": "^4.0.1",
		"npm-run-all": "^4.1.5",
		"rollup": "^2.3.3",
		"rollup-plugin-terser": "^5.3.0",
		"sass": "^1.26.3",
		"ts-node": "^8.8.2",
		"typescript": "^3.8.3"
	}
}
